<p>
  <b>Name:</b>
  <%= @product.name %>
</p>

  <%= render 'cart' %>

<p>
  <img src="<%= @result['images'][0]['link'] %>" />
</p>

<p>
  <%= @result['description'] %>
</p>

<p>
  <a href="<%= @result['link'] %>"><b>Buy Now!</b></a>
</p>

<p>
  <b>Price:</b>
  <%= number_to_currency(@product.price) %>


  <%= render 'addcart' %>



</p>

<p>
  <b>Reviews:</b>
  <ol>
  <% @product.reviews.each do |review| %>
  <li> <%=  '*' * review.rating %> 
    <p> <%= review.body %> 
  <% end %>
  </ol>
</p>




